<%- include('layout', { body: `
  <div class="max-w-2xl mx-auto py-16 px-4">
    <div class="bg-white rounded-2xl card-shadow overflow-hidden">
      <!-- Error Header -->
      <div class="bg-red-500 px-8 py-10 text-center">
        <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-white">Error</h1>
        <p class="text-red-100 mt-2">${typeof message !== 'undefined' ? message : 'Something went wrong'}</p>
      </div>

      <div class="p-8">
        <p class="text-gray-600 text-center mb-8">
          We encountered an error processing your request. Please try again or contact support if the problem persists.
        </p>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/store" class="bg-theme-primary hover:opacity-90 text-white py-3 px-6 rounded-xl font-semibold text-center transition">
            Back to Store
          </a>
          <a href="/checkout" class="bg-gray-100 hover:bg-gray-200 text-gray-800 py-3 px-6 rounded-xl font-semibold text-center transition">
            View Cart
          </a>
        </div>
      </div>
    </div>
  </div>
`, isAuthenticated: typeof isAuthenticated !== 'undefined' ? isAuthenticated : false, cartCount: typeof cartCount !== 'undefined' ? cartCount : 0, store: typeof store !== 'undefined' ? store : {}, themeCSS: typeof themeCSS !== 'undefined' ? themeCSS : '' }) %>
