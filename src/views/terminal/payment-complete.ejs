<%- include('../layout', { body: `
  <div class="max-w-lg mx-auto py-12 px-4">
    <div class="bg-white rounded-2xl card-shadow overflow-hidden">
      <!-- Status Header -->
      <div class="${success ? 'bg-green-500' : 'bg-red-500'} px-8 py-10 text-center">
        <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
          ${success ? `
          <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          ` : `
          <svg class="w-10 h-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
          `}
        </div>
        <h1 class="text-3xl font-bold text-white">${title}</h1>
      </div>

      <div class="p-8">
        <!-- Message -->
        <div class="text-center mb-8">
          <p class="text-gray-600">${message}</p>
        </div>

        ${amount ? `
        <!-- Payment Details -->
        <div class="bg-gray-50 rounded-xl p-6 mb-6">
          <div class="space-y-3">
            ${paymentId ? `
            <div class="flex justify-between items-center gap-2">
              <span class="text-gray-500 flex-shrink-0">Payment ID</span>
              <span class="font-mono text-xs text-gray-700 truncate" title="${paymentId}">
                ...${paymentId.slice(-12)}
              </span>
            </div>
            ` : ''}
            ${reference ? `
            <div class="flex justify-between items-center gap-2">
              <span class="text-gray-500 flex-shrink-0">Reference</span>
              <span class="font-medium text-gray-700 truncate">${reference}</span>
            </div>
            ` : ''}
            <div class="flex justify-between border-t border-gray-200 pt-3 mt-3">
              <span class="text-lg font-semibold text-gray-800">Amount</span>
              <span class="text-2xl font-bold ${success ? 'text-green-600' : 'text-gray-600'}">
                $${(amount / 100).toFixed(2)} ${currency || 'CAD'}
              </span>
            </div>
          </div>
        </div>
        ` : ''}

        <!-- Instructions -->
        <div class="text-center text-sm text-gray-500">
          ${success ? `
          <p>You may now close this window.</p>
          <p class="mt-2">The merchant terminal will be updated automatically.</p>
          ` : `
          <p>Please return to the merchant for assistance.</p>
          `}
        </div>
      </div>
    </div>
  </div>
` }) %>
