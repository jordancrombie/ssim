  <script>
    let cartData = null;
    let walletPopup = null;
    let popupCheckInterval = null;
    const wsimPopupUrl = '<%= wsimPopupUrl || "" %>';

    // WSIM Popup Wallet Integration
    function openWalletPopup() {
      if (!cartData || !cartData.items || cartData.items.length === 0) {
        alert('Your cart is empty');
        return;
      }

      const button = document.getElementById('payWalletPopupButton');
      button.disabled = true;
      button.innerHTML = `
        <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Opening Wallet...
      `;

      // Calculate center position for popup
      const width = 420;
      const height = 620;
      const left = (window.screen.width - width) / 2;
      const top = (window.screen.height - height) / 2;

      // Build popup URL with payment details
      const params = new URLSearchParams({
        origin: window.location.origin,
        merchantId: 'ssim-merchant',
        merchantName: 'SSIM Store',
        amount: (cartData.total / 100).toString(),
        currency: 'CAD',
        orderId: 'order-' + Date.now()
      });

      const popupUrl = wsimPopupUrl + '/popup/card-picker?' + params;

      // Open popup window centered on screen
      walletPopup = window.open(
        popupUrl,
        'wsim-wallet',
        `width=${width},height=${height},left=${left},top=${top},scrollbars=yes,resizable=yes`
      );

      // Check if popup was blocked
      if (!walletPopup || walletPopup.closed || typeof walletPopup.closed === 'undefined') {
        resetWalletPopupButton();
        document.getElementById('errorState').classList.remove('hidden');
        document.getElementById('genericError').classList.remove('hidden');
        document.getElementById('errorMessage').textContent = 'Popup was blocked. Please allow popups for this site or use "Sign in to Wallet" instead.';
        return;
      }

      // Set up message listener for popup responses
      window.addEventListener('message', handleWalletMessage);

      // Monitor for popup being closed without response
      popupCheckInterval = setInterval(() => {
        if (walletPopup && walletPopup.closed) {
          clearInterval(popupCheckInterval);
          window.removeEventListener('message', handleWalletMessage);
          resetWalletPopupButton();
        }
      }, 500);
    }

    function handleWalletMessage(event) {
      // IMPORTANT: Verify the origin
      if (!wsimPopupUrl || !event.origin.startsWith(wsimPopupUrl.replace(/\/$/, ''))) {
        return;
      }

      const { type, ...data } = event.data;
      console.log('[Checkout] Received wallet message:', type, data);

      switch (type) {
        case 'wsim:card-selected':
          // Payment confirmed - process the token
          handleWalletSuccess(data);
          break;

        case 'wsim:cancelled':
          // User cancelled the payment
          handleWalletCancel(data.reason);
          break;

        case 'wsim:error':
          // An error occurred
          handleWalletError(data);
          break;

        case 'wsim:auth-required':
          // User needs to authenticate (informational)
          console.log('[Checkout] Wallet auth required:', data.message);
          break;
      }
    }

    async function handleWalletSuccess(data) {
      // Clean up
      clearInterval(popupCheckInterval);
      window.removeEventListener('message', handleWalletMessage);
      if (walletPopup && !walletPopup.closed) {
        walletPopup.close();
      }

      // Store WSIM session token for future JWT API calls (Quick Checkout)
      if (data.sessionToken) {
        const expiresIn = data.sessionTokenExpiresIn || 2592000;
        localStorage.setItem('wsim_session_token', data.sessionToken);
        localStorage.setItem('wsim_session_expires', String(Date.now() + expiresIn * 1000));
        console.log('[Checkout] Stored WSIM session token for Quick Checkout');
        updateQuickCheckoutVisibility();
        // Also persist to server for cross-session use
        persistTokenToServer(data.sessionToken, expiresIn);
      }

      const button = document.getElementById('payWalletPopupButton');
      button.innerHTML = `
        <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Processing Payment...
      `;

      try {
        // Send cardToken to our backend to complete the payment
        const response = await fetch('/payment/popup-complete', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            cardToken: data.cardToken,
            cardLast4: data.cardLast4,
            cardBrand: data.cardBrand,
          }),
        });

        const result = await response.json();

        if (result.success && result.redirectUrl) {
          // Payment successful - redirect to confirmation
          window.location.href = result.redirectUrl;
        } else {
          throw new Error(result.reason || result.error || 'Payment failed');
        }
      } catch (error) {
        console.error('[Checkout] Payment processing error:', error);
        resetWalletPopupButton();
        document.getElementById('errorState').classList.remove('hidden');
        document.getElementById('genericError').classList.remove('hidden');
        document.getElementById('errorMessage').textContent = error.message || 'Payment processing failed';
      }
    }

    function handleWalletCancel(reason) {
      // Clean up
      clearInterval(popupCheckInterval);
      window.removeEventListener('message', handleWalletMessage);
      if (walletPopup && !walletPopup.closed) {
        walletPopup.close();
      }

      console.log('[Checkout] Wallet payment cancelled:', reason);
      resetWalletPopupButton();
    }

    function handleWalletError(data) {
      // Clean up
      clearInterval(popupCheckInterval);
      window.removeEventListener('message', handleWalletMessage);
      if (walletPopup && !walletPopup.closed) {
        walletPopup.close();
      }

      console.error('[Checkout] Wallet error:', data.code, data.message);
      resetWalletPopupButton();

      document.getElementById('errorState').classList.remove('hidden');
      if (data.code === 'passkey_cancelled') {
        document.getElementById('genericError').classList.remove('hidden');
        document.getElementById('errorMessage').textContent = 'Authentication was cancelled. Please try again.';
      } else {
        document.getElementById('genericError').classList.remove('hidden');
        document.getElementById('errorMessage').textContent = data.message || 'An error occurred with the wallet';
      }
    }

    function resetWalletPopupButton() {
      const button = document.getElementById('payWalletPopupButton');
      if (button) {
        button.disabled = false;
        button.innerHTML = `
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span>Popup</span>
        `;
      }
    }

    // WSIM Embedded iframe Wallet Integration
    let embedMessageListenerActive = false;

    function toggleWalletEmbed() {
      const container = document.getElementById('walletEmbedContainer');
      const iframe = document.getElementById('walletEmbedFrame');

      if (!container.classList.contains('hidden')) {
        // Already open - close it
        closeWalletEmbed();
        return;
      }

      if (!cartData || !cartData.items || cartData.items.length === 0) {
        alert('Your cart is empty');
        return;
      }

      // Build embed URL with payment details
      const params = new URLSearchParams({
        origin: window.location.origin,
        merchantId: 'ssim-merchant',
        merchantName: 'SSIM Store',
        amount: (cartData.total / 100).toString(),
        currency: 'CAD',
        orderId: 'order-' + Date.now()
      });

      const embedUrl = wsimPopupUrl + '/embed/card-picker?' + params;

      // Set up message listener for iframe responses
      if (!embedMessageListenerActive) {
        window.addEventListener('message', handleEmbedMessage);
        embedMessageListenerActive = true;
      }

      // Load the iframe
      iframe.src = embedUrl;
      container.classList.remove('hidden');

      // Scroll to show the embed
      setTimeout(() => {
        container.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }, 100);
    }

    function closeWalletEmbed() {
      const container = document.getElementById('walletEmbedContainer');
      const iframe = document.getElementById('walletEmbedFrame');

      container.classList.add('hidden');
      iframe.src = '';

      // Keep the listener active in case they reopen
    }

    function handleEmbedMessage(event) {
      // IMPORTANT: Verify the origin
      if (!wsimPopupUrl || !event.origin.startsWith(wsimPopupUrl.replace(/\/$/, ''))) {
        return;
      }

      const { type, ...data } = event.data;
      console.log('[Checkout] Received embed message:', type, data);

      switch (type) {
        case 'wsim:ready':
          console.log('[Checkout] Embed iframe ready');
          break;

        case 'wsim:resize':
          // Resize the iframe to fit content
          const iframe = document.getElementById('walletEmbedFrame');
          if (iframe && data.height) {
            iframe.style.height = data.height + 'px';
          }
          break;

        case 'wsim:card-selected':
          // Payment confirmed - process the token
          handleEmbedSuccess(data);
          break;

        case 'wsim:cancelled':
          // User cancelled the payment
          closeWalletEmbed();
          break;

        case 'wsim:error':
          // An error occurred
          handleEmbedError(data);
          break;

        case 'wsim:auth-required':
          // User needs to authenticate (informational)
          console.log('[Checkout] Embed auth required:', data.message);
          break;
      }
    }

    async function handleEmbedSuccess(data) {
      // Store WSIM session token for future JWT API calls (Quick Checkout)
      if (data.sessionToken) {
        const expiresIn = data.sessionTokenExpiresIn || 2592000;
        localStorage.setItem('wsim_session_token', data.sessionToken);
        localStorage.setItem('wsim_session_expires', String(Date.now() + expiresIn * 1000));
        console.log('[Checkout] Stored WSIM session token for Quick Checkout (embed)');
        updateQuickCheckoutVisibility();
        // Also persist to server for cross-session use
        persistTokenToServer(data.sessionToken, expiresIn);
      }

      // Show loading in place of iframe
      const container = document.getElementById('walletEmbedContainer');
      container.innerHTML = `
        <div class="text-center py-8">
          <svg class="animate-spin h-8 w-8 text-theme-primary mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <p class="text-gray-600 mt-4">Processing payment...</p>
        </div>
      `;

      try {
        // Send cardToken to our backend to complete the payment
        const response = await fetch('/payment/popup-complete', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            cardToken: data.cardToken,
            cardLast4: data.cardLast4,
            cardBrand: data.cardBrand,
          }),
        });

        const result = await response.json();

        if (result.success && result.redirectUrl) {
          // Payment successful - redirect to confirmation
          window.location.href = result.redirectUrl;
        } else {
          throw new Error(result.reason || result.error || 'Payment failed');
        }
      } catch (error) {
        console.error('[Checkout] Embed payment processing error:', error);
        closeWalletEmbed();
        // Restore the container HTML
        location.reload(); // Simple reload to reset state
      }
    }

    function handleEmbedError(data) {
      console.error('[Checkout] Embed error:', data.code, data.message);
      closeWalletEmbed();

      document.getElementById('errorState').classList.remove('hidden');
      if (data.code === 'passkey_cancelled') {
        document.getElementById('genericError').classList.remove('hidden');
        document.getElementById('errorMessage').textContent = 'Authentication was cancelled. Please try again.';
      } else {
        document.getElementById('genericError').classList.remove('hidden');
        document.getElementById('errorMessage').textContent = data.message || 'An error occurred with the wallet';
      }
    }

    // WSIM Merchant API Integration
    let selectedApiCardId = null;
    let apiPaymentId = null;
    let apiPasskeyOptions = null;
    let walletLoginPopup = null;

    async function showApiCardPicker() {
      if (!cartData || !cartData.items || cartData.items.length === 0) {
        alert('Your cart is empty');
        return;
      }

      const container = document.getElementById('apiCardPickerContainer');
      const loading = document.getElementById('apiCardsLoading');
      const notAuth = document.getElementById('apiNotAuthenticated');
      const cardsList = document.getElementById('apiCardsList');
      const confirmBtn = document.getElementById('apiConfirmPayment');

      // Show container and loading state
      container.classList.remove('hidden');
      loading.classList.remove('hidden');
      notAuth.classList.add('hidden');
      cardsList.classList.add('hidden');
      confirmBtn.classList.add('hidden');

      // Scroll to show the picker
      setTimeout(() => {
        container.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }, 100);

      try {
        // Check if user is authenticated with WSIM
        const authResponse = await fetch('/api/wsim/auth-check');
        const authData = await authResponse.json();

        loading.classList.add('hidden');

        if (!authData.authenticated) {
          notAuth.classList.remove('hidden');
          return;
        }

        // Fetch user's cards
        const cardsResponse = await fetch('/api/wsim/cards');
        if (!cardsResponse.ok) {
          const error = await cardsResponse.json();
          throw new Error(error.message || error.error || 'Failed to fetch cards');
        }

        const cardsData = await cardsResponse.json();
        console.log('[Checkout] API - Raw cards response:', JSON.stringify(cardsData, null, 2));
        const cards = cardsData.cards || [];

        if (cards.length === 0) {
          cardsList.innerHTML = `
            <div class="text-center py-4 text-gray-500">
              No cards enrolled in your wallet.
            </div>
          `;
          cardsList.classList.remove('hidden');
          return;
        }

        // Log first card to see available fields
        if (cards.length > 0) {
          console.log('[Checkout] API - First card fields:', Object.keys(cards[0]));
        }

        // Render cards - use fallback field names for cardholder
        cardsList.innerHTML = cards.map(card => {
          // Try multiple possible field names for cardholder name
          const cardholderName = card.cardholderName || card.holderName || card.name || card.ownerName || '';
          return `
          <div
            class="card-option p-4 border-2 rounded-lg cursor-pointer transition ${card.isDefault ? 'border-emerald-500 bg-emerald-50' : 'border-gray-200 hover:border-emerald-300'}"
            onclick="selectApiCard('${card.id}')"
            data-card-id="${card.id}"
          >
            <div class="flex items-center">
              <div class="w-12 h-8 bg-gradient-to-r ${card.cardType === 'VISA' ? 'from-blue-600 to-blue-800' : 'from-orange-500 to-red-600'} rounded flex items-center justify-center mr-3">
                <span class="text-white text-xs font-bold">${card.cardType}</span>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-800">${card.cardType} •••• ${card.lastFour}</div>
                <div class="text-sm text-gray-500">${cardholderName}</div>
              </div>
              ${card.isDefault ? '<span class="text-emerald-600 text-sm font-medium">Default</span>' : ''}
            </div>
          </div>
        `}).join('');

        cardsList.classList.remove('hidden');
        confirmBtn.classList.remove('hidden');

        // Auto-select default card
        const defaultCard = cards.find(c => c.isDefault);
        if (defaultCard) {
          selectApiCard(defaultCard.id);
        }

      } catch (error) {
        console.error('[Checkout] API card picker error:', error);
        loading.classList.add('hidden');
        cardsList.innerHTML = `
          <div class="text-center py-4 text-red-500">
            ${error.message || 'Failed to load wallet cards'}
          </div>
        `;
        cardsList.classList.remove('hidden');
      }
    }

    function selectApiCard(cardId) {
      selectedApiCardId = cardId;

      // Update UI
      document.querySelectorAll('#apiCardsList .card-option').forEach(el => {
        if (el.dataset.cardId === cardId) {
          el.classList.remove('border-gray-200', 'hover:border-emerald-300');
          el.classList.add('border-emerald-500', 'bg-emerald-50');
        } else {
          el.classList.remove('border-emerald-500', 'bg-emerald-50');
          el.classList.add('border-gray-200', 'hover:border-emerald-300');
        }
      });

      document.getElementById('apiConfirmPayment').disabled = false;
    }

    function closeApiCardPicker() {
      document.getElementById('apiCardPickerContainer').classList.add('hidden');
      selectedApiCardId = null;
      apiPaymentId = null;
