<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout - <%= store?.name || 'SSIM Store' %></title>
  <link rel="stylesheet" href="/css/tailwind.css">
  <style>
    <% if (typeof themeCSS !== 'undefined') { %>
      <%= themeCSS %>
    <% } %>
  </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <% if (store?.envBadge) { %>
            <div class="w-10 h-10 rounded-full bg-theme-primary flex items-center justify-center mr-3">
              <span class="text-white font-bold text-lg"><%= store.envBadge %></span>
            </div>
          <% } %>
          <% if (store?.logoUrl) { %>
            <a href="/"><img src="<%= store.logoUrl %>" alt="<%= store?.name %>" class="h-10"></a>
          <% } else { %>
            <a href="/" class="text-xl font-bold text-theme-primary"><%= store?.name || 'SSIM Store' %></a>
          <% } %>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/store" class="text-gray-600 hover:text-theme-primary">Store</a>
          <a href="/checkout" class="text-gray-600 hover:text-theme-primary relative">
            Cart
            <% if (cartCount > 0) { %>
            <span class="absolute -top-2 -right-2 bg-theme-primary text-white text-xs rounded-full w-5 h-5 flex items-center justify-center"><%= cartCount %></span>
            <% } %>
          </a>
          <% if (isAuthenticated) { %>
          <a href="/orders" class="text-gray-600 hover:text-theme-primary">Orders</a>
          <a href="/auth/logout" class="text-gray-600 hover:text-theme-primary">Logout</a>
          <% } else { %>
          <a href="/login" class="text-gray-600 hover:text-theme-primary">Login</a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-4xl mx-auto py-12 px-4">
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <!-- Header -->
      <div class="gradient-theme px-8 py-6">
        <h1 class="text-3xl font-bold text-white">Checkout</h1>
        <p class="text-white/80 mt-1">Review your order and complete payment</p>
      </div>

      <div class="p-8">
        <!-- Loading State -->
        <div id="loadingState" class="text-center py-8">
          <svg class="animate-spin h-8 w-8 text-theme-primary mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <p class="text-gray-600 mt-4">Loading cart...</p>
        </div>

        <!-- Empty Cart State -->
        <div id="emptyState" class="hidden text-center py-12">
          <svg class="w-20 h-20 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <h2 class="text-xl font-semibold text-gray-800 mt-4">Your cart is empty</h2>
          <p class="text-gray-600 mt-2">Add some items to your cart to checkout</p>
          <a href="/store" class="inline-block mt-6 btn-theme-primary px-6 py-3 rounded-lg font-semibold transition">
            Browse Store
          </a>
        </div>

        <!-- Cart Contents -->
        <div id="cartContents" class="hidden">
          <!-- Cart Items -->
          <div class="space-y-4 mb-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Order Summary</h2>
            <div id="cartItems" class="divide-y divide-gray-100">
              <!-- Items will be inserted here -->
            </div>
          </div>

          <!-- Order Total -->
          <div class="bg-gray-50 rounded-xl p-6 mb-8">
            <div class="flex justify-between items-center text-lg">
              <span class="font-semibold text-gray-800">Total</span>
              <span id="cartTotal" class="text-2xl font-bold text-theme-primary">$0.00</span>
            </div>
            <p class="text-sm text-gray-500 mt-2">Taxes calculated at checkout</p>
          </div>

          <!-- Pay with BSIM Button -->
          <button
            id="payBankButton"
            onclick="initiatePayment('bank')"
            class="w-full gradient-theme text-white py-4 px-6 rounded-xl font-semibold text-center hover:opacity-90 transition transform hover:scale-[1.02] flex items-center justify-center space-x-3"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
            <span>Pay with BSIM</span>
          </button>

          <% if (wsimEnabled) { %>
          <!-- Divider -->
          <div class="flex items-center my-4">
            <div class="flex-grow border-t border-gray-200"></div>
            <span class="mx-4 text-gray-400 text-sm">or pay with wallet</span>
            <div class="flex-grow border-t border-gray-200"></div>
          </div>

          <!-- Quick Checkout (JWT) - shown only for returning users with stored token -->
          <div id="quickCheckoutContainer" class="mb-4 hidden">
            <button
              id="quickCheckoutButton"
              onclick="showJwtApiCheckout()"
              class="w-full bg-gradient-to-r from-yellow-500 to-orange-500 text-white py-4 px-6 rounded-xl font-semibold text-center hover:from-yellow-600 hover:to-orange-600 transition transform hover:scale-[1.02] flex items-center justify-center space-x-3 shadow-lg"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <span>Quick Checkout</span>
              <span class="text-xs opacity-75">(Returning User)</span>
            </button>
          </div>

          <!-- Wallet payment options -->
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 mb-3">
            <!-- Pay with Wallet Popup (Quick checkout) -->
            <button
              id="payWalletPopupButton"
              onclick="openWalletPopup()"
              class="gradient-theme text-white py-4 px-6 rounded-xl font-semibold text-center hover:opacity-90 transition transform hover:scale-[1.02] flex items-center justify-center space-x-3"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <span>Popup</span>
            </button>

            <!-- Pay with Wallet Embed (Inline checkout) -->
            <button
              id="payWalletEmbedButton"
              onclick="toggleWalletEmbed()"
              class="bg-gradient-to-r from-indigo-600 to-violet-600 text-white py-4 px-6 rounded-xl font-semibold text-center hover:from-indigo-700 hover:to-violet-700 transition transform hover:scale-[1.02] flex items-center justify-center space-x-3"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
              </svg>
              <span>Inline</span>
            </button>

            <!-- Sign in to Wallet (Redirect flow) -->
            <button
              id="payWalletButton"
              onclick="initiatePayment('wallet')"
              class="bg-white border-2 border-violet-600 text-violet-600 py-4 px-6 rounded-xl font-semibold text-center hover:bg-violet-50 transition transform hover:scale-[1.02] flex items-center justify-center space-x-3"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
              </svg>
              <span>Redirect</span>
            </button>
          </div>

          <!-- API Options Row -->
          <div class="grid grid-cols-3 gap-3">
            <!-- Original API (Backend proxies WSIM calls) -->
            <button
              id="payWalletApiButton"
              onclick="showApiCardPicker()"
              class="bg-gradient-to-r from-emerald-600 to-teal-600 text-white py-4 px-6 rounded-xl font-semibold text-center hover:from-emerald-700 hover:to-teal-700 transition transform hover:scale-[1.02] flex items-center justify-center space-x-3"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
              <span>API</span>
            </button>

            <!-- API Direct (Browser calls WSIM directly with CORS) -->
            <button
              id="payWalletApiDirectButton"
              onclick="showApiDirectCardPicker()"
              class="bg-gradient-to-r from-cyan-600 to-blue-600 text-white py-4 px-6 rounded-xl font-semibold text-center hover:from-cyan-700 hover:to-blue-700 transition transform hover:scale-[1.02] flex items-center justify-center space-x-3"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <span>API (Direct)</span>
            </button>

            <!-- API Proxy (Explicit proxy label for clarity) -->
            <button
              id="payWalletApiProxyButton"
              onclick="showApiProxyCardPicker()"
              class="bg-gradient-to-r from-amber-600 to-orange-600 text-white py-4 px-6 rounded-xl font-semibold text-center hover:from-amber-700 hover:to-orange-700 transition transform hover:scale-[1.02] flex items-center justify-center space-x-3"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span>API (Proxy)</span>
            </button>
          </div>

          <!-- API Direct Card Picker UI -->
          <div id="apiDirectCardPickerContainer" class="hidden mt-4">
            <div class="border-2 border-cyan-200 rounded-xl p-6 bg-cyan-50">
              <div class="flex justify-between items-center mb-4">
                <div>
                  <h3 class="text-lg font-semibold text-gray-800">Select a Card</h3>
                  <p class="text-xs text-cyan-600">Direct API (browser → WSIM)</p>
                </div>
                <button onclick="closeApiDirectCardPicker()" class="text-gray-400 hover:text-gray-600">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>

              <!-- Loading state -->
              <div id="apiDirectCardsLoading" class="text-center py-8">
                <svg class="animate-spin h-8 w-8 text-cyan-600 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-gray-600 mt-4">Loading wallet...</p>
              </div>

              <!-- CORS Not Enabled state -->
              <div id="apiDirectCorsError" class="hidden text-center py-8">
                <svg class="w-12 h-12 text-orange-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <p class="text-orange-700 font-medium mb-2">CORS Not Enabled</p>
                <p class="text-gray-600 text-sm mb-4">WSIM needs to enable CORS for direct API calls.<br/>Use "API (Proxy)" or "Inline" instead.</p>
                <button
                  onclick="closeApiDirectCardPicker()"
                  class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-300 transition"
                >
                  Close
                </button>
              </div>

              <!-- Not authenticated state -->
              <div id="apiDirectNotAuthenticated" class="hidden text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                <p class="text-gray-600 mb-4">Please sign in to your wallet first</p>
                <button
                  onclick="openWalletLoginPopupForDirect()"
                  class="bg-cyan-600 text-white px-6 py-2 rounded-lg hover:bg-cyan-700 transition"
                >
                  Sign In to Wallet
                </button>
              </div>

              <!-- Cards list -->
              <div id="apiDirectCardsList" class="hidden space-y-3">
                <!-- Cards will be rendered here -->
              </div>

              <!-- Confirm button -->
              <button
                id="apiDirectConfirmPayment"
                onclick="confirmApiDirectPayment()"
                disabled
                class="hidden w-full mt-4 bg-cyan-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-cyan-700 transition disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center space-x-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
                <span>Confirm with Passkey</span>
              </button>
            </div>
          </div>

          <!-- JWT Quick Checkout Card Picker UI -->
          <div id="jwtCardPickerContainer" class="hidden mt-4">
            <div class="border-2 border-yellow-300 rounded-xl p-6 bg-yellow-50">
              <div class="flex justify-between items-center mb-4">
                <div>
                  <h3 class="text-lg font-semibold text-gray-800">Quick Checkout</h3>
                  <p class="text-xs text-yellow-600">JWT API (instant access)</p>
                </div>
                <button onclick="closeJwtCardPicker()" class="text-gray-400 hover:text-gray-600">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>

              <!-- Loading state -->
              <div id="jwtCardsLoading" class="text-center py-8">
                <svg class="animate-spin h-8 w-8 text-yellow-600 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-gray-600 mt-4">Loading your cards...</p>
              </div>

              <!-- Error state -->
              <div id="jwtError" class="hidden text-center py-8">
                <svg class="w-12 h-12 text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <p id="jwtErrorMessage" class="text-red-600 mb-4">An error occurred</p>
                <button
                  onclick="closeJwtCardPicker()"
                  class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-300 transition"
                >
                  Close
                </button>
              </div>

              <!-- Cards list -->
              <div id="jwtCardsList" class="hidden space-y-3">
                <!-- Cards will be rendered here -->
              </div>

              <!-- Confirm button -->
              <button
                id="jwtConfirmPayment"
                onclick="confirmJwtPayment()"
                disabled
                class="hidden w-full mt-4 bg-yellow-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-yellow-600 transition disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center space-x-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
                <span>Confirm with Passkey</span>
              </button>

              <!-- Passkey prompt state -->
              <div id="jwtPasskeyPrompt" class="hidden text-center py-8">
                <svg class="animate-pulse w-16 h-16 text-yellow-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4"></path>
                </svg>
                <p class="text-gray-700 font-medium mb-2">Confirm with your passkey</p>
                <p class="text-gray-500 text-sm">Use your fingerprint or face to authorize payment</p>
              </div>
            </div>
          </div>

          <!-- Original API Card Picker UI -->
          <div id="apiCardPickerContainer" class="hidden mt-4">
            <div class="border-2 border-emerald-200 rounded-xl p-6 bg-emerald-50">
              <div class="flex justify-between items-center mb-4">
                <div>
                  <h3 class="text-lg font-semibold text-gray-800">Select a Card</h3>
                  <p class="text-xs text-emerald-600">API Mode (backend proxy)</p>
                </div>
                <button onclick="closeApiCardPicker()" class="text-gray-400 hover:text-gray-600">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>

              <!-- Loading state -->
              <div id="apiCardsLoading" class="text-center py-8">
                <svg class="animate-spin h-8 w-8 text-emerald-600 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-gray-600 mt-4">Loading wallet...</p>
              </div>

              <!-- Not authenticated state -->
              <div id="apiNotAuthenticated" class="hidden text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                <p class="text-gray-600 mb-4">Please sign in to your wallet first</p>
                <button
                  onclick="openWalletLoginPopup()"
                  class="bg-emerald-600 text-white px-6 py-2 rounded-lg hover:bg-emerald-700 transition"
                >
                  Sign In to Wallet
                </button>
              </div>

              <!-- Cards list -->
              <div id="apiCardsList" class="hidden space-y-3">
                <!-- Cards will be rendered here -->
              </div>

              <!-- Confirm button -->
              <button
                id="apiConfirmPayment"
                onclick="confirmApiPayment()"
                disabled
                class="hidden w-full mt-4 bg-emerald-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-emerald-700 transition disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center space-x-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
