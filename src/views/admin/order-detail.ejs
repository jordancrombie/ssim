<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - SSIM Admin</title>
  <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body class="min-h-screen bg-gray-100">
  <div class="flex h-screen">
    <%- include('_sidebar', { currentPage: 'orders', userInfo: userInfo }) %>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
      <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="px-6 py-4">
          <h1 class="text-2xl font-semibold text-gray-800"><%= title %></h1>
        </div>
      </header>

      <main class="flex-1 overflow-y-auto p-6 bg-gray-100">
        <div class="mb-6">
          <a href="/admin/orders" class="text-purple-600 hover:text-purple-700 flex items-center">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Orders
          </a>
        </div>

        <!-- Notification -->
        <div id="notification" class="hidden mb-4 p-4 rounded-lg"></div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Order Details -->
          <div class="lg:col-span-2 space-y-6">
            <!-- Order Info Card -->
            <div class="bg-white rounded-xl shadow-sm p-6">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h2 class="text-lg font-semibold text-gray-800">Order Details</h2>
                  <p class="text-sm text-gray-500 font-mono"><%= order.id %></p>
                </div>
                <% if (order.status === 'authorized') { %>
                  <span class="px-3 py-1 text-sm font-medium bg-blue-100 text-blue-800 rounded-full">Authorized</span>
                <% } else if (order.status === 'captured') { %>
                  <span class="px-3 py-1 text-sm font-medium bg-green-100 text-green-800 rounded-full">Captured</span>
                <% } else if (order.status === 'voided') { %>
                  <span class="px-3 py-1 text-sm font-medium bg-gray-100 text-gray-600 rounded-full">Voided</span>
                <% } else if (order.status === 'refunded') { %>
                  <span class="px-3 py-1 text-sm font-medium bg-purple-100 text-purple-800 rounded-full">Refunded</span>
                <% } else if (order.status === 'declined') { %>
                  <span class="px-3 py-1 text-sm font-medium bg-red-100 text-red-800 rounded-full">Declined</span>
                <% } else if (order.status === 'failed') { %>
                  <span class="px-3 py-1 text-sm font-medium bg-red-100 text-red-800 rounded-full">Failed</span>
                <% } else { %>
                  <span class="px-3 py-1 text-sm font-medium bg-yellow-100 text-yellow-800 rounded-full">Pending</span>
                <% } %>
              </div>

              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Customer</span>
                  <p class="font-medium text-gray-800"><%= order.userId || 'Guest' %></p>
                </div>
                <div>
                  <span class="text-gray-500">Created</span>
                  <p class="font-medium text-gray-800"><%= new Date(order.createdAt).toLocaleString() %></p>
                </div>
                <div>
                  <span class="text-gray-500">Updated</span>
                  <p class="font-medium text-gray-800"><%= new Date(order.updatedAt).toLocaleString() %></p>
                </div>
                <div>
                  <span class="text-gray-500">Currency</span>
                  <p class="font-medium text-gray-800"><%= order.currency %></p>
                </div>
              </div>
            </div>

            <!-- Order Items -->
            <div class="bg-white rounded-xl shadow-sm p-6">
              <h2 class="text-lg font-semibold text-gray-800 mb-4">Items</h2>
              <table class="w-full">
                <thead>
                  <tr class="border-b">
                    <th class="text-left py-2 text-sm text-gray-500">Product</th>
                    <th class="text-center py-2 text-sm text-gray-500">Qty</th>
                    <th class="text-right py-2 text-sm text-gray-500">Price</th>
                    <th class="text-right py-2 text-sm text-gray-500">Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% order.items.forEach(item => { %>
                  <tr class="border-b">
                    <td class="py-3">
                      <p class="font-medium text-gray-800"><%= item.productName %></p>
                    </td>
                    <td class="py-3 text-center text-gray-600"><%= item.quantity %></td>
                    <td class="py-3 text-right text-gray-600"><%= formatPrice(item.unitPrice, order.currency) %></td>
                    <td class="py-3 text-right font-medium text-gray-800"><%= formatPrice(item.subtotal, order.currency) %></td>
                  </tr>
                  <% }); %>
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="3" class="py-3 text-right font-semibold text-gray-800">Subtotal</td>
                    <td class="py-3 text-right font-bold text-gray-800"><%= formatPrice(order.subtotal, order.currency) %></td>
                  </tr>
                </tfoot>
              </table>
            </div>

            <!-- Payment Details -->
            <% if (order.paymentDetails) { %>
            <div class="bg-white rounded-xl shadow-sm p-6">
              <h2 class="text-lg font-semibold text-gray-800 mb-4">Payment Information</h2>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <% if (order.paymentDetails.transactionId) { %>
                <div>
                  <span class="text-gray-500">Transaction ID</span>
                  <p class="font-mono text-gray-800 break-all"><%= order.paymentDetails.transactionId %></p>
                </div>
                <% } %>
                <% if (order.paymentDetails.authorizationCode) { %>
                <div>
                  <span class="text-gray-500">Authorization Code</span>
                  <p class="font-mono text-gray-800"><%= order.paymentDetails.authorizationCode %></p>
                </div>
                <% } %>
                <% if (order.paymentDetails.capturedAmount) { %>
                <div>
                  <span class="text-gray-500">Captured Amount</span>
                  <p class="font-medium text-green-600"><%= formatPrice(order.paymentDetails.capturedAmount, order.currency) %></p>
                </div>
                <% } %>
                <% if (order.paymentDetails.refundedAmount) { %>
                <div>
                  <span class="text-gray-500">Refunded Amount</span>
                  <p class="font-medium text-purple-600"><%= formatPrice(order.paymentDetails.refundedAmount, order.currency) %></p>
                </div>
                <% } %>
              </div>
            </div>
            <% } %>
          </div>

          <!-- Actions Sidebar -->
          <div class="space-y-6">
            <!-- Payment Actions -->
            <div class="bg-white rounded-xl shadow-sm p-6">
              <h2 class="text-lg font-semibold text-gray-800 mb-4">Payment Actions</h2>

              <% if (order.status === 'authorized') { %>
              <div class="space-y-3">
                <form action="/admin/orders/<%= order.id %>/capture" method="POST">
                  <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Capture Payment
                  </button>
                </form>
                <form action="/admin/orders/<%= order.id %>/void" method="POST" onsubmit="return confirm('Are you sure you want to void this authorization?')">
                  <button type="submit" class="w-full bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Void Authorization
                  </button>
                </form>
              </div>
              <% } else if (order.status === 'captured') { %>
              <form action="/admin/orders/<%= order.id %>/refund" method="POST" onsubmit="return confirm('Are you sure you want to refund this payment?')">
                <input type="hidden" name="reason" value="Admin refund">
                <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition flex items-center justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                  </svg>
                  Refund Payment
                </button>
              </form>
              <% } else { %>
              <p class="text-gray-500 text-sm">No actions available for this order status.</p>
              <% } %>
            </div>

            <!-- Order Summary -->
            <div class="bg-white rounded-xl shadow-sm p-6">
              <h2 class="text-lg font-semibold text-gray-800 mb-4">Summary</h2>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-500">Items</span>
                  <span class="font-medium"><%= order.items.reduce((sum, item) => sum + item.quantity, 0) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-500">Subtotal</span>
                  <span class="font-medium"><%= formatPrice(order.subtotal, order.currency) %></span>
                </div>
                <% if (order.paymentDetails && order.paymentDetails.capturedAmount) { %>
                <div class="flex justify-between text-green-600">
                  <span>Captured</span>
                  <span class="font-medium"><%= formatPrice(order.paymentDetails.capturedAmount, order.currency) %></span>
                </div>
                <% } %>
                <% if (order.paymentDetails && order.paymentDetails.refundedAmount) { %>
                <div class="flex justify-between text-purple-600">
                  <span>Refunded</span>
                  <span class="font-medium">-<%= formatPrice(order.paymentDetails.refundedAmount, order.currency) %></span>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script>
    const params = new URLSearchParams(window.location.search);
    const success = params.get('success');
    const error = params.get('error');
    const notification = document.getElementById('notification');

    if (success) {
      notification.className = 'mb-4 p-4 rounded-lg bg-green-100 text-green-800';
      if (success === 'captured') notification.textContent = 'Payment captured successfully!';
      else if (success === 'voided') notification.textContent = 'Authorization voided successfully!';
      else if (success === 'refunded') notification.textContent = 'Payment refunded successfully!';
      notification.classList.remove('hidden');
      history.replaceState({}, '', window.location.pathname);
    }

    if (error) {
      notification.className = 'mb-4 p-4 rounded-lg bg-red-100 text-red-800';
      if (error === 'invalid_status') notification.textContent = 'Cannot perform this action on the current order status.';
      else if (error === 'capture_failed') notification.textContent = 'Failed to capture payment. Please try again.';
      else if (error === 'void_failed') notification.textContent = 'Failed to void authorization. Please try again.';
      else if (error === 'refund_failed') notification.textContent = 'Failed to refund payment. Please try again.';
      else notification.textContent = 'An error occurred. Please try again.';
      notification.classList.remove('hidden');
      history.replaceState({}, '', window.location.pathname);
    }
  </script>
</body>
</html>
