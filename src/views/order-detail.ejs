<%- include('layout', { body: `
  <div class="max-w-4xl mx-auto py-12 px-4">
    <div class="bg-white rounded-2xl card-shadow overflow-hidden">
      <!-- Header -->
      <div class="gradient-bg px-8 py-6">
        <h1 class="text-3xl font-bold text-white">Order Details</h1>
        <p class="text-purple-100 mt-1">Order ID: ${order.id}</p>
      </div>

      <div class="p-8">
        <!-- Status Badge -->
        <div class="flex justify-between items-center mb-8">
          <span class="px-4 py-2 rounded-full text-sm font-medium ${
            order.status === 'authorized' ? 'bg-blue-100 text-blue-800' :
            order.status === 'captured' ? 'bg-green-100 text-green-800' :
            order.status === 'refunded' ? 'bg-yellow-100 text-yellow-800' :
            order.status === 'voided' ? 'bg-gray-100 text-gray-800' :
            order.status === 'declined' ? 'bg-red-100 text-red-800' :
            order.status === 'failed' ? 'bg-red-100 text-red-800' :
            'bg-gray-100 text-gray-800'
          }">
            Status: ${order.status.charAt(0).toUpperCase() + order.status.slice(1)}
          </span>
          <p class="text-sm text-gray-500">
            ${new Date(order.createdAt).toLocaleString('en-CA', {
              dateStyle: 'full',
              timeStyle: 'short'
            })}
          </p>
        </div>

        <!-- Order Items -->
        <div class="bg-gray-50 rounded-xl p-6 mb-6">
          <h2 class="font-semibold text-gray-800 mb-4">Items</h2>
          <div class="space-y-4">
            ${order.items.map(item => `
              <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-gradient-to-br from-purple-100 to-indigo-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-gray-800">${item.productName}</p>
                    <p class="text-sm text-gray-500">Qty: ${item.quantity} x ${formatPrice(item.unitPrice)}</p>
                  </div>
                </div>
                <p class="font-semibold text-gray-800">${formatPrice(item.subtotal)}</p>
              </div>
            `).join('')}
          </div>

          <div class="border-t border-gray-200 mt-4 pt-4">
            <div class="flex justify-between items-center">
              <span class="text-lg font-semibold text-gray-800">Total</span>
              <span class="text-2xl font-bold text-purple-600">${formatPrice(order.subtotal)}</span>
            </div>
          </div>
        </div>

        <!-- Payment Information -->
        ${order.paymentDetails ? `
        <div class="bg-purple-50 rounded-xl p-6 mb-6">
          <h3 class="font-semibold text-purple-800 mb-3">Payment Information</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-purple-600">Transaction ID</span>
              <span class="font-mono text-purple-800">${order.paymentDetails.transactionId}</span>
            </div>
            ${order.paymentDetails.authorizationCode ? `
            <div class="flex justify-between">
              <span class="text-purple-600">Authorization Code</span>
              <span class="font-mono text-purple-800">${order.paymentDetails.authorizationCode}</span>
            </div>
            ` : ''}
            ${order.paymentDetails.capturedAmount ? `
            <div class="flex justify-between">
              <span class="text-purple-600">Captured Amount</span>
              <span class="font-mono text-purple-800">${formatPrice(order.paymentDetails.capturedAmount)}</span>
            </div>
            ` : ''}
            ${order.paymentDetails.refundedAmount ? `
            <div class="flex justify-between">
              <span class="text-purple-600">Refunded Amount</span>
              <span class="font-mono text-purple-800">${formatPrice(order.paymentDetails.refundedAmount)}</span>
            </div>
            ` : ''}
          </div>
        </div>
        ` : ''}

        <!-- Back Link -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <a href="/orders" class="text-purple-600 hover:text-purple-700 font-medium flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Orders
          </a>
        </div>
      </div>
    </div>
  </div>
`, isAuthenticated: true, cartCount: cartCount, store: store, themeCSS: themeCSS }) %>
