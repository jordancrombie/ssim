<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= store?.name || 'Store' %></title>
  <link rel="stylesheet" href="/css/tailwind.css">
  <style>
    <%= themeCSS %>
  </style>
</head>
<body class="min-h-screen bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <% if (store?.envBadge) { %>
            <div class="w-10 h-10 rounded-full bg-theme-primary flex items-center justify-center mr-3">
              <span class="text-white font-bold text-lg"><%= store.envBadge %></span>
            </div>
          <% } %>
          <% if (store?.logoUrl) { %>
            <a href="/"><img src="<%= store.logoUrl %>" alt="<%= store?.name %>" class="h-10"></a>
          <% } else { %>
            <a href="/" class="text-2xl font-bold text-theme-primary"><%= store?.name || 'Store' %></a>
          <% } %>
        </div>
        <div class="flex items-center space-x-6">
          <a href="/store" class="text-gray-700 hover:text-theme-primary font-medium transition">Shop</a>
          <a href="/checkout" class="text-gray-700 hover:text-theme-primary font-medium transition flex items-center">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Cart
            <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
              <span class="ml-1 bg-theme-primary text-white text-xs px-2 py-0.5 rounded-full"><%= cartCount %></span>
            <% } %>
          </a>
          <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
            <a href="/orders" class="text-gray-700 hover:text-theme-primary font-medium transition">Orders</a>
            <a href="/profile" class="text-gray-700 hover:text-theme-primary font-medium transition">Profile</a>
            <a href="/auth/logout" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium transition">Logout</a>
          <% } else { %>
            <a href="/login" class="btn-theme-primary px-5 py-2 rounded-lg font-medium">Sign In</a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="gradient-theme">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
      <div class="text-center">
        <% if (store?.logoUrl) { %>
          <img src="<%= store.logoUrl %>" alt="<%= store?.name %>" class="h-16 mx-auto mb-6 brightness-0 invert">
        <% } %>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
          Welcome to <%= store?.name || 'Our Store' %>
        </h1>
        <% if (store?.tagline) { %>
          <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-2xl mx-auto"><%= store.tagline %></p>
        <% } else { %>
          <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-2xl mx-auto">Discover amazing products at great prices</p>
        <% } %>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/store" class="bg-white text-gray-900 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition shadow-lg">
            Shop Now
          </a>
          <% if (!isAuthenticated) { %>
            <a href="/login" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white/10 transition">
              Sign In
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </section>

  <% if (store?.heroImageUrl) { %>
    <!-- Hero Image -->
    <div class="w-full h-64 md:h-80 lg:h-96 bg-cover bg-center" style="background-image: url('<%= store.heroImageUrl %>');"></div>
  <% } %>

  <!-- Featured Products -->
  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Featured Products</h2>
        <p class="text-gray-600 text-lg">Check out some of our top picks</p>
      </div>

      <% if (featuredProducts && featuredProducts.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          <% featuredProducts.forEach(product => { %>
            <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-lg transition-shadow duration-300 group">
              <div class="h-48 bg-theme-primary-light flex items-center justify-center relative overflow-hidden">
                <% if (product.image) { %>
                  <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                <% } else { %>
                  <svg class="w-20 h-20 text-theme-primary opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                  </svg>
                <% } %>
                <span class="absolute top-3 left-3 bg-theme-primary text-white text-xs font-medium px-2 py-1 rounded-full uppercase tracking-wide">
                  <%= product.category %>
                </span>
              </div>
              <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-theme-primary transition"><%= product.name %></h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= product.description %></p>
                <div class="flex justify-between items-center">
                  <span class="text-2xl font-bold text-theme-primary"><%= formatPrice(product.price) %></span>
                  <a href="/store" class="btn-theme-primary px-4 py-2 rounded-lg font-medium text-sm">
                    View Details
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <div class="text-center mt-12">
          <a href="/store" class="btn-theme-primary px-8 py-3 rounded-lg font-semibold inline-block">
            View All Products
          </a>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
          <p class="text-gray-500 text-lg">No products available yet.</p>
          <a href="/store" class="text-theme-primary hover:underline mt-2 inline-block">Browse our store</a>
        </div>
      <% } %>
    </div>
  </section>

  <% if (store?.description) { %>
    <!-- About Section -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">About Us</h2>
        <p class="text-gray-600 text-lg leading-relaxed"><%= store.description %></p>
      </div>
    </section>
  <% } %>

  <!-- Features Section -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-14 h-14 bg-theme-primary-light rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-theme-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Secure Payments</h3>
          <p class="text-gray-600">Pay securely with your bank or digital wallet</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-theme-primary-light rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-theme-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Quick Checkout</h3>
          <p class="text-gray-600">Fast checkout with saved payment methods</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-theme-primary-light rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-theme-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Trusted & Safe</h3>
          <p class="text-gray-600">Your data is protected and secure</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-6 md:mb-0">
          <% if (store?.logoUrl) { %>
            <img src="<%= store.logoUrl %>" alt="<%= store?.name %>" class="h-8 brightness-0 invert">
          <% } else { %>
            <span class="text-xl font-bold"><%= store?.name || 'Store' %></span>
          <% } %>
          <p class="text-gray-400 text-sm mt-2">&copy; <%= new Date().getFullYear() %> <%= store?.name || 'Store' %>. All rights reserved.</p>
        </div>
        <div class="flex space-x-6">
          <a href="/store" class="text-gray-400 hover:text-white transition">Shop</a>
          <a href="/demo" class="text-gray-400 hover:text-white transition">OIDC Demo</a>
          <% if (isAuthenticated) { %>
            <a href="/orders" class="text-gray-400 hover:text-white transition">Orders</a>
            <a href="/profile" class="text-gray-400 hover:text-white transition">Profile</a>
          <% } %>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
